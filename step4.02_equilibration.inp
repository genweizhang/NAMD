# NAMD configuration file for LDH

# Varialbles
set temp           300.0
set outputname     step4.02_equilibration
set inputname      step4.01_equilibration
set firsttimestep  1000000

# Input files
amber              yes
parmfile           step3_pbcsetup.prmtop
coordinates        step3_pbcsetup.pdb
binvelocities      $inputname.vel
bincoordinates     $inputname.coor

# Output files
outputname         $outputname
binaryoutput       yes
DCDfreq            5000
outputEnergies     5000

# Non-bonded force field parameters
cutoff             12.0
switching          on
vdwForceSwitching  on
switchdist         10.0
exclude            scaled1-4
1-4scaling         0.833333
pairlistdist       14.0
stepspercycle      20
pairlistsPerCycle  2

# PME parameters
PME                yes
PMEInterpOrder     4
PMEGridSpacing     1.0

# Bond constraint parameters
rigidBonds         all

# Periodic boundary conditions
extendedSystem     $inputname.xsc

# Timestep parameters
timestep           2.0
firsttimestep      $firsttimestep
fullElectFrequency 2
nonbondedFreq      1

wrapWater           on
wrapAll             on

# Langevin dynamics parameters
langevin           on
langevinTemp       $temp
langevinDamping    2.0
langevinHydrogen   off

# Script

run 1000000
